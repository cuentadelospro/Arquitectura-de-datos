# Configuración de entorno para la aplicación

# Puerto del servidor (Azure usa PORT automáticamente)
PORT=3000

# Entorno de ejecución
NODE_ENV=development

# Configuración de base de datos (ejemplo)
# DATABASE_URL=mongodb://localhost:27017/arquitectura-datos
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=arquitectura_datos
# DB_USER=usuario
# DB_PASSWORD=contraseña

# Configuración de Azure (si es necesario)
# AZURE_STORAGE_CONNECTION_STRING=
# AZURE_STORAGE_ACCOUNT_NAME=
# AZURE_STORAGE_ACCOUNT_KEY=

# Configuración de logging
LOG_LEVEL=info

# Configuración de CORS (si es necesario)
# CORS_ORIGIN=*

# Configuración de JWT (si es necesario para autenticación)
# JWT_SECRET=tu_secreto_aqui
# JWT_EXPIRES_IN=24h